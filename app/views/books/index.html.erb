<h1>Bücher</h1>

<table>
  <tr>
    <th>Titel</th>
    <th>Auflage</th>
    <th>Veröffentlichungsdatum</th>
    <th>Genre</th>
    <th>Tags</th>
    <th>Autoren</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.edition %></td>
    <td><%= book.published %></td>
    <td><%= book.genre %></td>
    <td><%= book.tags %></td>
    <td>
      <% book.users.each do |user| %>
        <%= user.email %>
      <% end %>
    </td>
    <td><%= link_to 'Detailansicht', book %></td>
    <td><%= link_to 'Bearbeiten', edit_book_path(book) %></td>
    <td><%= link_to 'Löschen', book, method: :delete, data: { confirm: 'Sind Sie sicher?' } %></td>
  </tr>
<% end %>
</table>

<br />

